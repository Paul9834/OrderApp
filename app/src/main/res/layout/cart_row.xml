<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_trago_cart"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_titulo_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Margaritas" />

                <TextView
                    android:id="@+id/txt_description_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:ellipsize="end"
                    android:maxLines="2"
                    tools:text="Margaritas con limÃ³n y vodka"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/txt_aditional"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/holo_red_light"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:fontFamily="@font/mazzardhbold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.466">

                        <Button
                            android:id="@+id/arrowBtn"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            app:iconGravity="textStart"
                            android:gravity="center"
                            app:iconPadding="0dp"
                            app:cornerRadius="15dp"
                            app:icon="@drawable/ic_round_remove_24"
                            />

                        <TextView
                            android:id="@+id/txt_items_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:fontFamily="@font/mazzardhbold"
                            android:textColor="@color/primaryDarkColor"
                            android:textSize="16sp"
                            />

                        <Button
                            android:id="@+id/arrowBtn2"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            android:gravity="center"
                            app:cornerRadius="15dp"
                            app:icon="@drawable/ic_baseline_add_24"
                            />

                        <TextView
                            android:id="@+id/txt_price_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="$1.000"
                            android:gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/groteskly"
                        />


                    </LinearLayout>



                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_remove_cart"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="9sp"
                        android:text="ELIMINAR"
                        app:cornerRadius="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>